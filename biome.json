{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "attributePosition": "auto",
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "security": {
        "noBlankTarget": "off"
      },
      "recommended": true,
      "a11y": {
        "noRedundantAlt": "error",
        "useAltText": "error",
        "useButtonType": "error",
        "useHtmlLang": "error"
      },
      "complexity": {
        "noUselessFragments": "error",
        "useFlatMap": "error"
      },
      "correctness": {
        "noUnknownFunction": "error",
        "noUnknownUnit": "error",
        "noUnusedImports": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noValueAtRule": "error",
        "useConst": "error",
        "useShorthandAssign": "error"
      },
      "suspicious": {
        "noCompareNegZero": "error",
        "noDuplicateClassMembers": "error",
        "noDuplicateParameters": "error",
        "noRedeclare": "error",
        "noSuspiciousSemicolonInJsx": "error",
        "noVar": "error",
        "useIsArray": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "double",
      "indentWidth": 2
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "formatter": {
        "lineWidth": 160,
        "indentStyle": "space",
        "indentWidth": 2
      }
    }
  ]
}